{{! 
	
	POST FORMAT - STATUS
	- Configuration of this file is not required.  

}}

	<article class="postitem format-status {{post_class}} {{#if @first}}first{{/if}}">
		<div class="wrapper">
			<div class="content">{{content}}</div>
			{{#author}}
				<a href="{{url}}" class="author">{{#if image}}<img src="{{image}}" alt="{{name}}">{{/if}}{{name}}</a>
			{{/author}}
		</div>
	</article>
